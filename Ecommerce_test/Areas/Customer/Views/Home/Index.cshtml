@model IEnumerable<ProductVM>
<form asp-action="Index">
    <div class="row">
        <div class="col-md-8">
            <input name="search" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-info">Search</button>
        </div>
    </div>
</form>
    <div class="row pb-3">
    @foreach (var ProductVM in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if (ProductVM.Product.ProductImage != null && ProductVM.Product.ProductImage.Count() > 0)
                        {
                            <img src="@ProductVM.Product.ProductImage.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                        }else{
                            <img src="~/images/noImg.png" class="card-img-top rounded" />
                        }
                        
                        <div class=" pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center"> @ProductVM.Product.Title</p>
                            <p class="card-title text-warning text-center">by <b>@ProductVM.Product.Author</b> </p>
                        </div>
                        <div class=" pl-1">
                            <p class="text-dark text-opacity-75  text-center mb-0">List Price:  <span class="text-decoration-line-through"> @ProductVM.Product.ListPrice.ToString("c")</span></p>
                        </div>
                        <div class=" pl-1">
                            <p class="text-dark text-opacity-75  text-center">As low as :<span> @ProductVM.Product.Price100.ToString("c")</span></p>
                        </div>  
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-productId="@ProductVM.Product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>