@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
<form method="post" action="Edit">
    <input asp-for="Id" hidden readonly />
    <div class="border p-3 mt-4">
        

        <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Title" />
                    <label class="ms-2">Product Name</label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="ISBN" />
                    <label class="ms-2">ISBN</label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Description" />
                    <label class="ms-2">Product Description</label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Author" />
                    <label class="ms-2">Author Name</label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="ListPrice" />
                    <label class="ms-2">ListPrice</label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price" />
                    <label class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price50" />
                    <label class="ms-2">Price50</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price100" />
                    <label class="ms-2">Price100</label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3 ">
                <button type="submit" class="btn btn-primary form-control"> Update </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
        </div>



    </div>
</form>
</div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
